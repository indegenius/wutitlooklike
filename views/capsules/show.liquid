{% layout "layout.liquid" %}
{% block content %}

<article>

    <img src="{{capsule.picture}}" />
    <h3>{{capsule.message}}</h3>
    <a href="/capsules/{{ capsule._id }}/edit"><button>EDIT</button></a>
    <form action="/capsules/{{ capsule._id }}?_method=DELETE" method="post">
    <input type="submit" value="DELETE">
    </form>
    <a href="/capsules"><button>Back to Main</button></a>

</article>


{% endblock %}